<div class="widget" id="DevicePanel-DeviceInfo">
    <div class="header">
        <h1>Service status</h1>
        <button class="reset_button button1 hoverSpin" onclick="moduleApiUpdateWorkerUpdate(this)">
            <img src="<%= getIcon("refresh") %>" alt="refresh" title="refresh">
        </button>
        <div class="top">
            <p>ERROR</p>
        </div>
    </div>
    <table class="table-widget-segment">
        <thead>
            <tr>
                <th>field</th>
                <th>value</th>
            </tr>
        </thead>
        <tbody id="DevicePanel-ServicesStatus-table">
            <%if(DevicePanel.DeviceInfoWidget) DevicePanel.DeviceInfoWidget.rows.forEach(element => {%>
                <tr>
                    <td class="table-name"><%= element.name %></td>
                    <td class="module-api-fetcher table-dataField"
                        unit="<% if(element.unit){%><%=element.unit%><%}else{%><%=""%><%} %>" 
                        resource="<%= element.resource %>" 
                        component="<%= element.component %>"
                        port="<% element.port%>"
                    ></td>
                </tr>
            <%});%>
        </tbody>
    </table>
</div>