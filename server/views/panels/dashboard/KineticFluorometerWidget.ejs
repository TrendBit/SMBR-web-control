                  const bodies = container.getElementsByClassName("bodies")[0].children;
                  for (let i = 0; i < bodies.length; i++) {
                    bodies[i].style.display = "none";                   
                  }
                  for (let i = 0; i < heads.length; i++) {
                    heads[i].classList.remove("active");                   
