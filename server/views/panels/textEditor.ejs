
<div class="file-browser">
    <div class="search-bar">
        <input type="text">
        <img src="UI/icons/search_icon.svg" alt="searchIcon" class="icon">
    </div>
    <% if(type == "experiments"){%>
    <div class="add-button ">
        <div class="button1">
            <div class="button2container">
                <input type="text" class="button2 left add-button-fileName" placeholder="file name">
                <button class="button2 right" onclick="createNewFileOnServer(this, '<%= type %>')">create</button>
            </div>
            <img src="UI/icons/add_icon.svg" alt="addIcon" onclick="toggleClass_Parent(this, 'activated')">
        </div>
    </div>
    <% } %>
    <ul class="file-list" >
        <script>onloadQueue.push(() => reloadFileList('<%= type %>'));</script>
    </ul>

</div>
<div class="file-editor">
    <div class="fe-header">
        <div class="fe-left-buttons">
            <% if(type=="experiments"){ %>
                <button class="headerButton" onclick="deleteFileOnServer('<%= type %>')"><img src="<%= getIcon("trashbin") %>" alt="delete" title="delete"></button>
                <button class="headerButton" onclick="renameFileOnServer('<%= type %>')"><img src="<%= getIcon("rename") %>" alt="rename" title="rename"></button>
            <% }%>
        </div>
        <h2 class="fe-fileName">Select file</h2>
        <h3 class="fe-fileExtension"></h3>
        <div class="fe-right-buttons">
            <button class="headerButton" onclick="saveFileOntoServer('<%= type %>')"> <img src="<%= getIcon("upload") %>" alt="upload" title="upload"></button>
        </div>
        <div class="fe-popup"></div>
    </div>  
    <textarea id="<%= type %>-codeditor" name="<%= type %>-codeditor"></textarea>
</div>